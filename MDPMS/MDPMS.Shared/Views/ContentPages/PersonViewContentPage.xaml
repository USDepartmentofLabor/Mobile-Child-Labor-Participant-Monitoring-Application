<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDPMS.Shared.Views.ContentPages.PersonViewContentPage"
             Title="{Binding ApplicationInstanceData.SelectedLocalization.Translations[HouseholdMember]}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="{Binding EditDeleteRowHeight}"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0"
                        x:Name="ScrollView"/>
            <Grid Grid.Row="1"
                  IsEnabled="{Binding AllowEditDelete}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Margin="5,5,1,5"
                        Text="{Binding ApplicationInstanceData.SelectedLocalization.Translations[Edit]}"
                        Command="{Binding EditCommand}"/>
                <Button Grid.Column="1"
                        Margin="1,5,5,5"
                        Text="{Binding ApplicationInstanceData.SelectedLocalization.Translations[Delete]}"
                        Command="{Binding DeleteCommand}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
