<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDPMS.Shared.Views.LandingView">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.RowSpan="2" Source="child.png" Aspect="AspectFill"/>
            <Grid Grid.Row="0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" TextColor="White" Style="{StaticResource LabelStyleCenteredWrapped}" Text="{Binding ApplicationInstanceData.SelectedLocalization.Translations[ProjectName]}" FontAttributes="Bold" FontSize="28"/>
                <Label Grid.Row="2" TextColor="White" Style="{StaticResource LabelStyleCenteredWrapped}" Text="{Binding ApplicationInstanceData.SelectedLocalization.Translations[Mobile]}" FontAttributes="Bold" FontSize="24"/>
                <Label Grid.Row="3" TextColor="White" Style="{StaticResource LabelStyleCenteredWrapped}" Text="{Binding ApplicationInstanceData.SelectedLocalization.Translations[ProjectPhrase]}" FontAttributes="Bold" FontSize="24"/>
                <Image Grid.Row="4" Source="dolseal.png" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Grid.Row="5" Text="{Binding ApplicationInstanceData.SelectedLocalization.Translations[Continue]}" Margin="10" Command="{Binding NavigateToMainContentCommand}"/>
                <Button Grid.Row="6" Margin="1" Image="globe_32xLG.png" BackgroundColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding NavigateToLocalizationSelectionCommand}"/>
                <Label Grid.Row="6" Text="{Binding ApplicationInstanceData.SelectedLocalization.DisplayName}" Margin="5,5,15,5" TextColor="White" FontAttributes="Italic" FontSize="22" HorizontalOptions="End" VerticalOptions="Center" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>