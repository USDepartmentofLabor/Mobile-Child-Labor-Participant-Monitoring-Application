<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDPMS.Shared.Views.CustomFieldRankListView">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="Auto" x:Name="ContentAreaGridRowDefinition"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   Text="{Binding Name}"
                   Font="Bold"/>
            <Label Grid.Row="1"
                   Text="{Binding HelpText}"/>
            <StackLayout Grid.Row="2"
                         x:Name="ContentArea"/>
        </Grid>
    </ContentView.Content>
</ContentView>
